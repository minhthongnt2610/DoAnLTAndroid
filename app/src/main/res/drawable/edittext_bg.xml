<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:angle="45"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>

</layer-list>
